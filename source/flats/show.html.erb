<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->



  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>'); height: 50vh;">
  </div>
  <div class="container">
  <div class="col-xs-12 col-sm-6 col-sm-offset-1">
    <div class="header-flat-owner">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle", style:" height: 80px "%>
    </div>
    <div class="header-flat-description">
      <p><%= flat.name %></p>
      <h1><%= flat.description %></h1>
      <p><%= flat.city_name %></p>
    </div>
  </div>
</div>
